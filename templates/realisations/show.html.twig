            <div>
                <img src="/img/site/realisations{{ asset(RealisationsDetails.annexeRealisation3) }}"
                     alt="{{ RealisationsDetails.titreRealisation }}"
                     title="{{ RealisationsDetails.titreRealisation }}" class="w-25 mt-5 mb-3">
            </div>

            {% if RealisationsDetails.annexeRealisation4 is not null %}
