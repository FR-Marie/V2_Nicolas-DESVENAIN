{% block title %}{% endblock %}

{% block body %}

    <h3 class="text-center">{{ RealisationsDetails.titreRealisation }}</h3>

    <div class="container">

        <div class="row">

            <div>
                <img src="/img/site/realisations{{ asset(RealisationsDetails.imageRealisation) }}"
