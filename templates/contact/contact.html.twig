{% extends 'base.html.twig' %}

{% block title %}{{ titreSite }} - {{ titrePage }}{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <h2 id="h2-pages" class="text-center">{{ titrePage }}</h2>
        </div>


        <div class="row p-5 contact-form justify-content-center">

            <div class="col-lg-6 text-white">
                <div class="d-flex justify-content-around">
                    <div class="form-group w-50 me-3">
                        {{ form_start(form) }}
                        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group w-50 ms-3">
                        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>


                <div class="form-group w-50">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-light px-4 py-2">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>

        </div>



    </div>



{% endblock %}

